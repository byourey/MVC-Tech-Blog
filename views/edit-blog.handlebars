<article>
  <a href="/profile" class="is-pulled-right"> &larr; back to dashboard</a>
  <h2 class="title mt-5">edit post</h2><hr>
  <form class="edit-blog-form">
    <div>
        <label for="post-title">post title:</label>
      <input class="input" name="post-title" type="text" value="{{blog.title}}" />
    </div>
    <div>
        <label for="post-content">post content:</label>
      <input class="textarea" name="post-content" type="text" value="{{blog.post_content}}" />
    </div>
    <div class="is-pulled-right">
       created by you on {{format_date blog.created_at}}
      |
      <a href="/post/{{post.id}}">{{blog.comments.length}} {{format_plural "comment" blog.comments.length}}</a>
    </div>
    <button type="submit" class="button is-success">save post</button>
    <button type="button" class="button is-danger delete-post-btn">delete post</button>
  </form>
</article>

{{> comments post.comments}}

<script src="/javascript/edit-blog.js"></script>
<script src="/javascript/delete-blog.js"></script>
<script src="/javascript/comment.js"></script>